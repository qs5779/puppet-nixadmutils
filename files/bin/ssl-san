#!/bin/bash
# vim:sta:et:sw=2:ts=2:syntax=sh
# Revision History:
# 20161008 - quiensabe - check extension
# 20170519 - que - crl doesn't accept a DIGEST
# 20170708 - que - support s switch in getopts
# 20190416 - que - remove unused digest
#
#

SCRIPT=$(basename "$0")
VERSION='$Revision: 2526 $'
VERBOSE=0
DEBUG=0
ERRORS=0

function usage {
  cat << EOM
usage: $SCRIPT [-d] [-h] [-v] [-V] certfile.pem [ ... ]
  where:
    -d specify debug mode
    -h show this message and exit
    -v add verbosity
    -V show version and exit

    show the subject alternative name(s) of a ssl certificate
EOM
  exit 1
}

while getopts ":dhvV" opt
do
  case "$opt" in
    d )
      ((DEBUG+=1))
      ((VERBOSE+=1))
    ;;
    h )
      usage
    ;;
    v ) ((VERBOSE+=1)) ;;
    V )
      echo "$SCRIPT VERSION: $VERSION"
      exit 0
    ;;
    * )
      echo "Unexpected option \"$opt\""
      usage
    ;;
  esac
done
shift $((OPTIND - 1))

if [ -z "$1" ]
then
  usage
fi

while [ -n "$1" ]
do
  INFILE="$1"
  shift

  EXT="${INFILE##*.}"
  EXT=$(echo $EXT | tr '[A-Z]' ['a-z'])
  case "$EXT" in
    csr )
      SSLCMD=req
    ;;
    * )
      SSLCMD=x509
    ;;
  esac

  if [ -r "$INFILE" ]
  then
    openssl $SSLCMD -in "$INFILE" -noout -text | grep DNS
  else
    echo "File not (found|readable): $INFILE" >&2
    ((ERRORS+=1))
  fi
done

# ERRORS=$((ERRORS+=1)) # darn ubuntu default dash shell
exit "$ERRORS"

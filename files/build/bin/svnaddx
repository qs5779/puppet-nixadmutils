#!/bin/bash
# vim:sta:et:sw=2:ts=2:syntax=sh
#
# Revision History
# 20141126 - que - initial version
# 20210101 - que - shellcheck corrections
#

SCRIPT=$(basename "$0")
ERRORS=0

if [ -n "$1" ]
then
  while [ -n "$1" ]
  do
    if [ -f "$1" ]
    then
      svn add "$1"
      svnpropx "$1"
    else
      echo "File not found: $1"
    fi
    shift
  done
else
  echo "usage: $SCRIPT file [ file1 ... ]"
  ((ERRORS+=1))
fi

exit "$ERRORS"

#!/bin/bash
# -*- Mode: Bash; tab-width: 2; indent-tabs-mode: nil -*- vim:sta:et:sw=2:ts=2:syntax=sh
#
# Revision History:
# 20190625 - que - initial version
#

SCRIPT=$(basename "$0")
VERSION='$Revision: 2123 $'
VERBOSE=0
DEBUG=0
ERRORS=0

function usage {
  cat << EOM
usage: $SCRIPT [-d level] [-h] [-v] [-V]
  where:
    -d - specify debug mode
    -h - show this message and exit
    -v - add verbosity
    -V - show version and exit
EOM
  exit 1
}

while getopts ":d:hvV" opt
do
  case "$opt" in
    d )
      DETAIL="$OPTARG"
    ;;
    h )
      usage
    ;;
    v ) ((VERBOSE+=1)) ;;
    V )
      echo "$SCRIPT VERSION: $(echo $VERSION | awk '{ print $2 }')"
      exit 0
    ;;
    * )
      echo "Unexpected option \"$opt\""
      usage
    ;;
  esac
done
shift $((OPTIND - 1))

if [ "$(whoami)" != "root" ]
then
  SUDO=sudo
else
  SUDO=''
fi

$SUDO rm -fr /var/lib/apt/lists/*
$SUDO mkdir /var/lib/apt/lists/partial

exit $?

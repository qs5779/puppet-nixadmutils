#!/bin/sh
# vim:sta:et:sw=2:ts=2:syntax=sh
#
# Revision History:
# 20180706 - richarjt - initial version
#
while [ -n "$1" ]
do
  if [ -r "$1" ]
  then
    ruby -c "$1"
    if [ $? -ne 0 ]
    then
      ERRORS=$((ERRORS+1))
    else
      echo "$1 syntax OK"
    fi
  else
    echo "File not (found|readable): $1"
    ERRORS=$((ERRORS+1))
  fi
  shift
done

exit "$ERRORS"

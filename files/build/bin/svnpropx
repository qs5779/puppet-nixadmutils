#!/bin/bash
# -*- Mode: Bash; tab-width: 2; indent-tabs-mode: nil -*- vim:sta:et:sw=2:ts=2:syntax=sh#
#
# Dependencies:
#  svnprop
#
# Revision History
#  20110107 - richarjt - added header
#  20120629 - richarjt - moved logic to svnprop
#

SCRDIR=$(dirname "$0")

if [ -f "$1" ]; then
  while [ -f "$1" ]
  do
    ${SCRDIR}/svnprop -x "$1"
#    svn propset svn:keywords "Id Author Date HeadURL Revision" "$1"
#    svn propset svn:eol-style LF "$1"
#    svn propset svn:executable '' "$1"
    shift
  done
else
  echo "File not found: $1"
fi

#!/bin/bash
# -*- Mode: Bash; tab-width: 2; indent-tabs-mode: nil -*- vim:sta:et:sw=2:ts=2:syntax=sh
#
# Revision History:
# 20160915 - richarjt - initial version
#

ERRORS=0

while [ -n "$1" ]
do
  if [ -r "$1" ]
  then
    erb -P -x -T '-' "$1" | ruby -c
    if [ $? -ne 0 ]
    then
      ((ERRORS+=1))
    else
      echo "$1 syntax OK"
    fi
  else
    echo "File not (found|readable): $1"
    ((ERRORS+=1))
  fi
  shift
done

exit $ERRORS

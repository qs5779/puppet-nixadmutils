#!/bin/sh
# -*- Mode: Bash; tab-width: 2; indent-tabs-mode: nil -*- vim:sta:et:sw=2:ts=2:syntax=sh
#
# Revision History:
# 20150126 - richarjt - initial version
# 20150228 - richarjt - bash does not support -w
#

ERRORS=0

while [ -n "$1" ]
do
  if [ -r "$1" ]
  then
    sh -n $1
    if [ $? -ne 0 ]
    then
      ERRORS=$((ERRORS+=1))
    else
      echo "$1 syntax OK"
    fi
  else
    echo "File not (found|readable): $1"
    ERRORS=$((ERRORS+=1))
  fi
  shift
done

exit $ERRORS
